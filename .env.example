APP_NAME=CustomerCareAPI  # Nom de votre application
APP_ENV=local             # Environnement par défaut (local)
APP_KEY=                  # Clé d'application (laisser vide - sera générée)
APP_DEBUG=true            # Mode debug activé par défaut en local
APP_URL=http://localhost   # URL de base de l'application

LOG_CHANNEL=stack         # Canal de logs par défaut
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug           # Niveau de logs par défaut

DB_CONNECTION=mysql       # Connexion à la base de données MySQL par défaut
DB_HOST=127.0.0.1         # Hôte MySQL par défaut
DB_PORT=3306             # Port MySQL par défaut
DB_DATABASE=customercareapi # Nom de la base de données par défaut (à créer)
DB_USERNAME=root          # Utilisateur MySQL par défaut (à modifier)
DB_PASSWORD=              # Mot de passe MySQL par défaut (LAISSER VIDE par sécurité)

BROADCAST_DRIVER=log      # Driver de diffusion (pour WebSockets, etc.)
CACHE_DRIVER=file         # Driver de cache par défaut (fichiers)
FILESYSTEM_DISK=local     # Disque de stockage de fichiers par défaut (local)
QUEUE_CONNECTION=sync     # Connexion de la file d'attente par défaut (synchrone)
SESSION_DRIVER=file       # Driver de session par défaut (fichiers)
SESSION_LIFETIME=120      # Durée de vie des sessions (en minutes)

MEMCACHED_HOST=127.0.0.1  # Hôte Memcached (si utilisé)

REDIS_HOST=127.0.0.1      # Hôte Redis (si utilisé)
REDIS_PASSWORD=null        # Mot de passe Redis (LAISSER VIDE par défaut)
REDIS_PORT=6379          # Port Redis par défaut

MAIL_MAILER=smtp          # Mailer par défaut (SMTP)
MAIL_HOST=mailpit         # Hôte SMTP (Mailpit pour le développement)
MAIL_PORT=1025            # Port SMTP (Mailpit)
MAIL_USERNAME=null        # Nom d'utilisateur SMTP (LAISSER VIDE par défaut)
MAIL_PASSWORD=null        # Mot de passe SMTP (LAISSER VIDE par défaut)
MAIL_ENCRYPTION=null      # Encryption SMTP (aucune par défaut pour Mailpit)
MAIL_FROM_ADDRESS="hello@example.com" # Adresse email "From" par défaut
MAIL_FROM_NAME="${APP_NAME}" # Nom "From" par défaut (nom de l'application)

AWS_ACCESS_KEY_ID=        # Clé d'accès AWS S3 (LAISSER VIDE - non utilisé par défaut)
AWS_SECRET_ACCESS_KEY=    # Clé secrète AWS S3 (LAISSER VIDE - non utilisé par défaut)
AWS_DEFAULT_REGION=us-east-1 # Région AWS par défaut (LAISSER VALEUR PAR DÉFAUT)
AWS_BUCKET=               # Bucket AWS S3 par défaut (LAISSER VIDE - non utilisé par défaut)
AWS_USE_PATH_STYLE_ENDPOINT=false # Style d'endpoint AWS S3 (LAISSER VALEUR PAR DÉFAUT)

PUSHER_APP_ID=           # ID Pusher (LAISSER VIDE - non utilisé par défaut)
PUSHER_APP_KEY=          # Clé Pusher (LAISSER VIDE - non utilisé par défaut)
PUSHER_APP_SECRET=       # Secret Pusher (LAISSER VIDE - non utilisé par défaut)
PUSHER_HOST=             # Hôte Pusher (LAISSER VALEUR PAR DÉFAUT)
PUSHER_PORT=443           # Port Pusher (LAISSER VALEUR PAR DÉFAUT)
PUSHER_SCHEME=https        # Schéma Pusher (LAISSER VALEUR PAR DÉFAUT)
PUSHER_APP_CLUSTER=mt1      # Cluster Pusher (LAISSER VALEUR PAR DÉFAUT)

VITE_APP_NAME="${APP_NAME}" # Nom de l'application pour Vite (frontend)
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}" # Clé Pusher pour Vite (frontend)
VITE_PUSHER_HOST="${PUSHER_HOST}"   # Hôte Pusher pour Vite (frontend)
VITE_PUSHER_PORT="${PUSHER_PORT}"   # Port Pusher pour Vite (frontend)
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}" # Schéma Pusher pour Vite (frontend)
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}" # Cluster Pusher pour Vite (frontend)